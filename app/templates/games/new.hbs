<MastHead @shouldFlicker={{true}} />

{{#if this.model.currentReaction}}
  <ReactionInput
    @promptValue={{this.model.currentReaction.prompt.value}}
    @onSet={{this.setReactionAndGoToNext}}
    @maxSeconds={{this.model.promptSet.maxSeconds}}
  />
{{/if}}

<ul class="results-list list-reset pt-8 w-lg mx-auto">
    {{#each
      (sort-by "updatedAt:asc" (filter-by "updatedAt" this.model.reactions))
      as |reaction|
    }}
      <li>
        <ResultItem @reaction={{reaction}} />
      </li>
    {{/each}}
</ul>
