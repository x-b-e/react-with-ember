<MastHead @shouldFlicker={{true}} />

<div class="text-6xl text-yellow text-shadow text-center">
  {{this.model.currentReaction.prompt.value}}
  <CountdownTimer />
</div>

<div class="text-center mt-8">
  <input
    class="bg-transparent border-0 border-b-2 border-yellow rounded-none text-3xl outline-none text-center text-yellow font-mono pb-3"
    {{on "change" this.setCurrentQuery}}
    {{on "keyup" this.setCurrentQuery}}
    {{on "keydown" this.setCurrentQueryByOption}}
    {{on "keydown" this.setReactionValueFromEnter}}
    id="current-query"
  >
</div>

<ul class="reaction text-6xl text-center mt-8 flex list-reset justify-center">
  <EmojiMatcher @query={{this.currentQuery}} @onMatch={{this.setMatches}} as |matches|>
    {{#each matches as |match index|}}
      <EmojiSelectionItem @emoji={{match.unicode}} @shortname={{match.shortname}} @index={{index}} />
    {{/each}}
  </EmojiMatcher>
</ul>

  <ul class="results-list list-reset pt-8 w-lg mx-auto">
    {{#animated-container}}
      {{#animated-each
        (sort-by "updatedAt:desc" (filter-by "isReacted" this.model.reactions))
        use=moveTransition
        duration=200
        as |reaction|
      }}
        <li>
          <ResultItem @reaction={{reaction}} />
        </li>
      {{/animated-each}}
    {{/animated-container}}
  </ul>
